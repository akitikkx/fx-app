<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FXApp" parent="Base.Theme.FXApp" />

    <style name="Base.Theme.FXApp" parent="Base.Theme.MaterialTheme">
        <item name="colorPrimary">@color/navy_blue_500</item>
        <item name="colorPrimaryVariant">@color/navy_blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="materialButtonStyle">@style/Widget.FXApp.Button</item>
        <item name="popupMenuStyle">@style/Widget.FXApp.PopupMenu</item>
        <item name="circularProgressIndicatorStyle">@style/Widget.FXApp.CircularProgressIndicator
        </item>
    </style>

    <style name="Base.Theme.MaterialTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Widget.FXApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.FXApp.SmallComponent</item>
    </style>

    <style name="Widget.FXApp.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/custom_popup_background</item>
    </style>

    <style name="Widget.FXApp.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.FXApp.CircularProgressIndicator</item>
        <item name="trackThickness">@dimen/progress_bar_track_thickness</item>
    </style>

    <style name="ThemeOverlay.FXApp.CircularProgressIndicator" parent="">
        <item name="colorPrimary">@color/navy_blue_700</item>
    </style>
</resources>